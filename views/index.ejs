                <label for="formFileMultiple" class="form-label">Multiple files input example
                    <input class="form-control" type="file" name="file" id="formFileMultiple" multiple></label>
                <button type="submit" class="btn btn-primary mt-1">Enviar</button>
            </form>
        </div>
    </div>

